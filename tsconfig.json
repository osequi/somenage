{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "downlevelIteration": true,
    "baseUrl": "./src", // see https://nextjs.org/docs/advanced-features/module-path-aliases
    "paths": {
      "@color-scheme-designer/*": ["apps/color-scheme-designer/*"],
      "@home/*": ["apps/home/*"],
      "@components/*": ["components/*"],
      "@hooks": ["hooks/"],
      "@theme": ["theme/"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
